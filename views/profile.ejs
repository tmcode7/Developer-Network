<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">

          <div class="flex flex-col justify-center">
              <div class="profile-pic flex justify-center"><img class="h-32 w-32 border-2 border-indigo-600 rounded-full text-center"><%=user.profilePicture %></div>
              <p class="font-bold text-center"><%= user.userName %></p>
              <p class="text-center"> <%= user.email %></p>
              <a href="/logout" class="text-sm text-indigo-600 italic text-center">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="flex justify-center">
        <div class="myPosts">
          <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <h2><%= posts[i].title%></h2>
                <img class="object-scale-down h-80 w-64" src="<%= posts[i].image%>">
              </a>
            </li>
          <% } %>
          </ul>
        </div>
      </div> 
      
      <div class="mt-10 flex justify-center gap-5">
        <a class="text-center p-4 mb-1 text-3xl text-indigo-600 font-bold border border-indigo-600 rounded-full" href="/feed">/></a>
        <a class="text-center p-4 mb-1 text-3xl text-indigo-600 font-bold border border-indigo-600 rounded-full" href="/feed">+</a>
      </div>

    </div>
  </div>
</div>
<%- include('partials/footer') -%>