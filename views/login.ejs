<%- include('partials/header') -%>

<main class="container flex flex-row h-screen">

    <div class="image-area basis-3/4">
        <img class="bg-contain" src="./imgs/amr-taha-mm8SfLRfF2Q-unsplash.jpg">
    </div>

    <div class="login-area basis-1/4">
        <header class="container">
            <h1 class="text-center p-4 mb-10 text-4xl text-indigo-600 font-bold"><a href="/profile">/></a></h1>
            <div class="text-center p-4 mb-10">
              <h1 class="text-2xl font-bold"><a href="/profile">Developer Network</a></h1>
              <span class="text-sm italic">...find inspiration</span>
            </div>
        </header>

        <section class="">
            <div class="text-center">
              <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
              <div class="text-sm italic text-red-200"><%= el.msg %></div>
              <% }) %> <% } %> <% if (locals.messages.info) { %> <%
              messages.info.forEach( el => { %>
              <div class="text-sm italic text-red-200"><%= el.msg %></div>
              <% }) %> <% } %>
            </div>
            <div class="login-form flex justify-center">
              <form action="/login" method="POST">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Email address</label
                  >
                  <input
                    type="email"
                    class="form-control border border-indigo-600 rounded-sm"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                    name="email"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label ">Password</label>
                  <input
                    type="password"
                    class="form-control border border-indigo-600 rounded-sm"
                    id="exampleInputPassword1"
                    name="password"
                  />
                </div>
              
                <button type="submit" class="border-solid border-2 border-indigo-600 py-1 rounded-lg w-full">Login</button>
              </form>
            </div>
          </section>



        <div class="flex justify-center text-sm italic mt-5">
            <p>New to this space? <a href="/signup" class="text-indigo-600"> Signup</a></p>
            
        </div>
    </div>
</main>
    

<%- include('partials/footer') -%>

